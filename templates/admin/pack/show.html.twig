{% extends 'admin/index.html.twig' %}

{% block title %}Pack{% endblock %}

{% block body %}
   <div class="col-sm-12 col-xl-8 mx-auto">
    <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Pack Details</h6>

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Field</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
    <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pack.id }}</td>
                </tr>
                <tr>
                <th>Type</th>
                <td>{{ pack.type.value }}</td>
                </tr>
                <tr>
                <th>Duration Type</th>
                <td>{{ pack.duration.value }}</td>
                <tr>
                </tr>
                <th>Amount</th>
                <td>{{ pack.amount }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex justify-content-between">
    <a href="{{ path('app_admin_pack_index') }}" class="btn btn-sm btn-info">back to list</a>
    <a href="{{ path('app_admin_pack_edit', {'id': pack.id}) }}" class="btn btn-sm btn-warning">edit</a>
    <div class="text-center">
    {{ include('admin/pack/_delete_form.html.twig') }}
</div>
</div>
</div>
{% endblock %}
