{% extends 'admin/index.html.twig' %}

{% block title %}Pack index{% endblock %}

{% block body %}
  <div class="col-sm-12 col-xl-8 mx-auto">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Subscription Table</h6>
        <table class="table table-dark">
            <thead>
            <tr>
                <th>Id</th>
                <th>Package Type</th>
                <th>Package Duration Type</th>
                <th>Amount </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pack in packs %}
            <tr>
                <td>{{ pack.id }}</td>
                <td>{{ pack.type.value }}</td>
                <td>{{ pack.duration.value }}</td>
                <td>{{ pack.amount }}</td>
                <td>
                    <a href="{{ path('app_admin_pack_show', {'id': pack.id}) }}" class="btn btn-info">show</a>
                    <a href="{{ path('app_admin_pack_edit', {'id': pack.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <a href="{{ path('app_admin_pack_new') }}" class="btn btn-success">Create new</a>
</div>
</div>
{% endblock %}
