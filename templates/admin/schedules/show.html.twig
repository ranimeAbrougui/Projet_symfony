{% extends 'admin/index.html.twig' %}

{% block title %}Schedule Details{% endblock %}

{% block body %}
<div class="col-sm-12 col-xl-8 mx-auto">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Schedule Details</h6>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Field</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ schedule.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Start Time</th>
                    <td>{{ schedule.startTime ? schedule.startTime|date('Y-m-d H:i') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th scope="row">End Time</th>
                    <td>{{ schedule.endTime ? schedule.endTime|date('Y-m-d H:i') : 'N/A' }}</td>
                </tr>
                <tr>
                    <th scope="row">Room</th>
                    <td>{{ schedule.room }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_admin_schedules_index') }}" class="btn btn-info">Back to List</a>
            <a href="{{ path('app_admin_schedules_edit', {'id': schedule.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('admin/schedules/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
