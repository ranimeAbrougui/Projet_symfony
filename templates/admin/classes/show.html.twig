{% extends 'admin/index.html.twig' %}

{% block title %}Class Details{% endblock %}

{% block body %}
    <div class="col-sm-12 col-xl-8 mx-auto">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Class Details</h6>

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Field</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ class.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Name</th>
                        <td>{{ class.category }}</td>
                    </tr>
                    <th> Equipments </th>
                    <td>
                    {% if class.equipments is not empty %}
                                    <ul>
                                        {% for equipment in class.equipments %}
                                            <li>
                                                <strong>{{ equipment.name }}</strong> ({{ equipment.type }}) 
                                                - Condition: {{ equipment.Eqcondition }}
                                                - Last Maintenance: {{ equipment.lastMaintDate ? equipment.lastMaintDate|date('Y-m-d') : 'Not Maintained' }}
                                            </li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    No equipments assigned
                                {% endif %}
                    </td>
                    <tr>
                        <th scope="row">Description</th>
                        <td>{{ class.description }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Capacity</th>
                        <td>{{ class.capacity }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_admin_classes_index') }}" class="btn btn-info">Back to List</a>
                <a href="{{ path('app_admin_classes_edit', {'id': class.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('admin/classes/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
