{% extends 'admin/index.html.twig' %}

{% block title %}Instructor Details{% endblock %}

{% block body %}
<div class="col-sm-12 col-xl-8 mx-auto">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Instructor Details</h6>

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Field</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ instructor.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Name</th>
                    <td>{{ instructor.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Specialization</th>
                    <td>{{ instructor.spec }}</td>
                </tr>
                <tr>
                    <th scope="row">Bio</th>
                    <td>{{ instructor.bio }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <a href="{{ path('app_admin_instructors_index') }}" class="btn btn-info">Back to List</a>
            <a href="{{ path('app_admin_instructors_edit', {'id': instructor.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('admin/instructors/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
