{% extends 'admin/index.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="col-sm-12 col-xl-8 mx-auto">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">User Details</h6>

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Field</th>
                        <th scope="col">Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Username</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ user.nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Prenom</th>
                        <td>{{ user.prenom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Phone</th>
                        <td>{{ user.phone }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="d-flex justify-content-between">
                <a href="{{ path('app_admin_user_index') }}" class="btn btn-info">Back to List</a>
                <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
                {{ include('admin/user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
